<% title '<img src="/images/title_add_item.png" alt="" />' %>

<% form_for([@category, @item], :html => { :class => 'form_style'}) do |f| %>
  <%= render "form", :f => f %>
  <p style="float: right;">
    <%= image_submit_tag "/images/button_save_and_add.jpg", :name => "add_another" %>
  </p>
  <p style="float: left;">
    <%= image_submit_tag "/images/button_save_this_item.jpg", :id => "form_submit" %>
  </p>
<% end %>