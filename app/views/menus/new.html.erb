<% title '<img src="/images/title_new_menu.png" alt="" />' %>

<% form_for @menu, :html => { :class => 'form_style' } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description, 'Description <span>(optional)</span>' %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>